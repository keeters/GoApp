<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="s.hbogo.trip.AddTripRide">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAddStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Start" />

        <Button
            android:id="@+id/btnAddDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Destination" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add Date"
            android:textSize="40dp" />


        <DatePicker
            android:id="@+id/dpRideDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.52" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How many passengers?" />

        <NumberPicker
            android:id="@+id/npSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etTripDescription"
            android:layout_width="350dp"
            android:layout_height="200dp"
            android:hint="Add a trip description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnAddRide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add Ride" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>
