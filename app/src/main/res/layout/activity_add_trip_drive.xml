<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="s.hbogo.trip.AddTripDrive">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAddStart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Start" />

        <Button
            android:id="@+id/btnAddDestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Destination" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Add Date"
            android:textSize="40dp" />


        <DatePicker
            android:id="@+id/dpRideDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.52" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbAccountVehicle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Use vehicle on account" />

            <Button
                android:id="@+id/btnChangeVehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Use a different vehicle" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="How many avaliable seats?" />

        <NumberPicker
            android:id="@+id/npSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/etTripDescription"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:hint="Add a trip description"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/btnAddDrive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add drive" />

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
